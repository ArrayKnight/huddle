{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compileOnSave": false,
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true
    },
    "include": ["src"]
}
