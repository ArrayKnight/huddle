{
    "name": "huddle",
    "version": "1.0.0",
    "description": "",
    "license": "ISC",
    "scripts": {
        "prebuild": "npm run clean",
        "build": "run-p build:*",
        "build:esm": "rollup -c",
        "build:es5": "cross-env NOMODULE=true rollup -c",
        "clean": "rm -rf dist",
        "commit": "npm run lint && git add -i && npx git-cz",
        "lint": "eslint src/**/*.{js,svelte,ts}",
        "prestart": "npm run clean",
        "start": "run-p start:*",
        "start:esm": "rollup -c -w",
        "start:es5": "cross-env NOMODULE=true rollup -c -w",
        "upgrade": "npm-check --update"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "post-commit": "git push -u origin $(git rev-parse --abbrev-ref HEAD)"
        }
    },
    "lint-staged": {
        "**/*.{ts,tsx,json,md}": [
            "prettier --write"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "dependencies": {
        "@pixi/app": "^5.3.3",
        "core-js": "^3.6.5",
        "svelte": "^3.28.0"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/plugin-transform-runtime": "^7.11.5",
        "@babel/preset-env": "^7.11.5",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@rollup/plugin-babel": "^5.2.1",
        "@rollup/plugin-commonjs": "^15.1.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@rollup/plugin-typescript": "^6.0.0",
        "@tsconfig/svelte": "^1.0.10",
        "@typescript-eslint/eslint-plugin": "^4.2.0",
        "@typescript-eslint/parser": "^4.2.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.9.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-svelte3": "^2.7.3",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "node-sass": "^4.14.1",
        "npm-check": "^5.9.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.1.2",
        "prettier-plugin-svelte": "^1.3.0",
        "rollup": "^2.28.2",
        "rollup-plugin-copy": "^3.3.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-serve": "^1.0.4",
        "rollup-plugin-svelte": "^6.0.1",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-visualizer": "^4.1.1",
        "svelte-preprocess": "^4.3.2",
        "typescript": "^4.0.3"
    }
}
